@page "/collectionviewplayground/grid"

<ContentPage Title="Grid Layout">
    <CollectionView ItemsSource="_intItems"
                    SelectionMode="SelectionMode.Single"
                    ItemsLayout="_itemsLayout">

        <ItemTemplate>
            <Item Value="@context" />
        </ItemTemplate>
    </CollectionView>
</ContentPage>

@code {
    MC.IItemsLayout _itemsLayout = new MC.GridItemsLayout(5, ItemsLayoutOrientation.Vertical);
    List<int> _intItems = Enumerable.Range(1, 100).ToList();
}
